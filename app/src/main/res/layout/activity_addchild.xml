<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principal"
    tools:context=".AddchildActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_border"
        android:rotation="45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/avatargirl"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/bg_border"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout8"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout8">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/avatar" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_border"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout8"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout9"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout9">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/avatargirl2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/childadd"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout10" />

    <EditText
        android:id="@+id/editText5"
        android:hint="First name"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <EditText
        android:id="@+id/editText6"
        android:hint="Last name"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <Button
        android:id="@+id/btngender"
        android:layout_width="310dp"
        android:layout_height="50dp"

        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:hint="Gender"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText6" />

    <Button
        android:layout_width="310dp"
        android:id="@+id/btnbirthdate"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:hint="Birth date"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btngender" />

    <Button
        android:id="@+id/button5"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="150dp"
        android:backgroundTint="@color/white"
        android:text="Skip"
        android:textColor="@color/principal"
        app:layout_constraintEnd_toEndOf="@+id/btnbirthdate"
        app:layout_constraintStart_toStartOf="@+id/btnbirthdate"
        app:layout_constraintTop_toBottomOf="@+id/btnbirthdate" />

    <Button
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="Next"
        android:textColor="@color/principal"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="@+id/btnbirthdate"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button5" />
</androidx.constraintlayout.widget.ConstraintLayout>